@using System.Text.RegularExpressions
@model List<Nota>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <h2>Bloco de notas online</h2>

    <div id="toolbar" class="mb-2"></div>
    <div id="editor" style="height: 200px; margin-bottom: 10px"></div>

    <button id="btnSalvar" class="btn btn-primary mb-4">Salvar</button>
    <button id="btnExcluir" class="btn btn-danger mb-4 ms-2" style="display:none;">Excluir Nota</button>

    <hr />

    <h4 class="mb-3">Notas salvas</h4>

    <div id="notasContainer" class="row g-3">
        @if (Model != null)
        {
            @foreach (var nota in Model)
            {
                var textoLimpo = Regex.Replace(nota.Conteudo, "<.*?>", "");
                var resumo = textoLimpo.Length > 20 ? textoLimpo.Substring(0, 20) + "..." : textoLimpo;

                <div class="col-md-3 col-sm-6">
                    <div class="card shadow-sm bloco" id="nota-@nota.Id" onclick="carregarNota(@nota.Id)">
                        <div class="card-body p-2">
                            <p class="card-text small">@resumo</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


<div class="modal fade" id="modalConfirmacao" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalLabel">Confirmar exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir esta nota?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnConfirmarExclusao">Excluir</button>
            </div>
        </div>
    </div>
</div>

<style>
    .bloco {
        cursor: pointer;
        transition: transform 0.2s;
    }

        .bloco:hover {
            transform: scale(1.02);
            background-color: #f8f9fa;
        }

    #editor {
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        padding: 10px;
    }
</style>

<script>
    var quill = new Quill("#editor",{
        theme: 'snow',
        modules: {
            toolbar: [
                ['bold', 'italic', 'underline'],
                [{'list': 'ordered'}, {'list':'bullet'}]
            ]
        }
    });

    let notaIdAtual = null;
    let idParaExcluir = null;

    $('#btnSalvar').on('click', function(){
        let conteudo = quill.root.innerHTML;

        if(conteudo.trim() == '' || conteudo == '<p></br></p>'){
            alert("Digite algo para salvar!");
            return;
        }

        $.post('/Home/SalvarNota', {id: notaIdAtual, conteudo: conteudo}, function (res) {
            if (!res.sucesso) {
                alert("Erro ao salvar.");
                return
            }

            if (notaIdAtual) {
                let card = $(`#nota-${notaIdAtual}`);
                if (card.length) {
                    card.find('.card-text').text(res.resumo);
                }
            } else {
                $('#notasContainer').prepend(`
                <div class="col-md-3 col-sm-6">
                   <div class="card shadow-sm bloco" id="nota-${res.id}" onclick="carregarNota(${res.id})">
                      <div class="card-body p-2">
                         <p class="card-text small">${res.resumo}</p>
                      </div>
                   </div>
                </div>
                `);
            }

            notaIdAtual = null;
            quill.setContents([]);
            $('#btnExcluir').hide();
        });
    });

    function carregarNota(id) {
        $.get('/Home/ObterNota', {id: id }, function (res) {
            quill.root.innerHTML = res.conteudo;
            notaIdAtual = id;
            $('#btnExcluir').show();
        });
    }

    $('#btnExcluir').on('click', function () {
        if (!notaIdAtual) return;

        idParaExcluir = notaIdAtual;
        var modal = new bootstrap.Modal(document.getElementById('modalConfirmacao'));
        modal.show();
    });

    $('#btnConfirmarExclusao').on('click', function () {
        if (!idParaExcluir) return;

        fetch(`/Home/Delete/${idParaExcluir}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                $(`#nota-${idParaExcluir}`).remove();
                notaIdAtual = null;
                idParaExcluir = null;
                quill.setContents([]);
                $('#btnExcluir').hide();
                bootstrap.Modal.getInstance(document.getElementById('modalConfirmacao')).hide();
            } else {
                alert("Erro ao excluir a nota.");
            }
        });
    });
</script>